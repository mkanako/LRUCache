  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm:compile",
      "type": "npm",
      "script": "compile",
      "presentation": {
        "reveal": "silent"
      },
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm:main",
      "type": "npm",
      "promptOnClose": true,
      "script": "main",
      "presentation": {
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "npm:watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "promptOnClose": true,
    },
  ]
}
